{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES2015", "DOM"],
        "jsx": "react",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    }
}
